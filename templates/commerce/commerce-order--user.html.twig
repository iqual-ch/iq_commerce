{#
  /**
   * @file
   * Template for orders in the 'user' view mode.
   *
   * Available variables:
   * - attributes: HTML attributes for the wrapper.
   * - order: The rendered order fields.
   *   Use 'order' to print them all, or print a subset such as
   *   'order.order_number'. Use the following code to exclude the
   *   printing of a given field:
   *   @code
   *   {{ order|without('order_number') }}
   *   @endcode
   * - order_entity: The order entity.
   *
   * @ingroup themeable
   */
#}

<div{{ attributes }}>

  <div class="row iq-row fullwidth iq-user-area__order-detail">
    <div class="col iq-column">

      {% block order_print_icon %}
      <div class="print-icon">
        <a class="print-icon__link" href="/print/pdf/commerce_order/{{ order_entity.id }}">
          <div class="print-icon__label">{{'Print'|t}}</div>
          <i class="fa fa-print print-icon__icon"></i>
        </a>
      </div>
      {% endblock %}

      {% block order_status %}
        {% set divider = ":" %}
        <div class="order-status">
          <span class="order-status__label">{{ "Order placed"|t }}</span>
          <span class="order-status__divider"{{ divider }}</span>
          <span class="order-status__value">{{ order.placed }}</span>

          <span class="order-status__label">{{ "Order completed"|t }}</span>
          <span class="order-status__divider">{{ divider }}</span>
          <span class="order-status__value">{{ order.completed }}</span>

          <span class="order-status__label">{{ "Order number"|t }}</span>
          <span class="order-status__divider">{{ divider }}</span>
          <span class="order-status__value">{{ order.order_number }}</span>

          <span class="order-status__label">{{ "Order state"|t }}</span>
          <span class="order-status__divider">{{ divider }}</span>
          <span class="order-status__value">{{ order.state }}</span>

          <span class="order-status__label">{{ "Shipping information"|t }}</span>
          <span class="order-status__divider">{{ divider }}</span>
          <span class="order-status__value">{{ order.shipping_information.0.shipment }}</span>
        </div>
      {% endblock %}

      {% block customer_email %}
        <div class="customer-email">{{ order.mail }}</div>
      {% endblock %}

      {% block customer_information %}
        <div class="customer-information">
          {% if order.billing_information %}
            <div class="customer-information__billing">
              <div class="field__label">{{ 'Billing information'|t }}</div>
              {{ order.billing_information }}
            </div>
          {% endif %}
          {% if order.shipping_information %}
            <div class="customer-information__shipping">
              <div class="field__label">{{ 'Shipping information'|t }}</div>
              {{ order.shipping_information.shipping_profile }}
            </div>
          {% endif %}
        </div>
      {% endblock %}

      {% block order_information %}
        <div class="order-information">
          {{ order.order_items }}
          {{ order.total_price }}
          {{ additional_order_fields }}
        </div>
      {% endblock %}

    </div>
  </div>

</div>
